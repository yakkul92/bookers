
<header>
  <h1>Books</h1>
</header>

<main>

<table class="index">
  <thead>
      <th>table</th>
      <th>body</th>
      <th colspan="3"></th>
  </thead>
  <tbody>
    <tr>
      <% @books.each do |book| %>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id) %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td><%= link_to "Destroy", book_path(book.id), method: :delete,"data-confirm"=>"本当に削除しますか？" %></td>        
      <% end %>
     </tr>
  </tbody>
</table>

<h2>New books</h2>
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    
    <%= f.submit 'Create Book' %>
  <% end %>
</main>