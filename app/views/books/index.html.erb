
  <header>
    <h1>Books</h1>
  </header>

  <table class="index">
    
    <thead>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
    </thead>
    
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to "Show", book_path(book.id) %></td>
          <td><%= link_to "Edit", edit_book_path(book.id) %></td>
          <td><%= link_to "Destroy", book_path(book.id), method: :delete,"data-confirm"=>"本当に削除しますか？" %></td>        
        </tr>
      <% end %>
    </tbody>
    
  </table>

  <h2>New book</h2>

  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= @book.errors.count %> errors prohibited this book from being saved:
      </h2>

      <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

   <%= form_with model: @book do |f| %>
    
    <form class="newbook">
      
      <div class="field">
        <label for="book-title">Title</label>
        <%= f.text_field :title %>
      </div>
      
      <div class="field">
        <label for="book-body">Body</label>
        <%= f.text_area :body %>
      </div>
      
      <div class="action">
      <%= f.submit 'Create Book' %>
      </div>
      
    </form>      
  <% end %>
